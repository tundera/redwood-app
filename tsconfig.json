{
	"compilerOptions": {
		"noEmit": true,
		"allowJs": true,
		"esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
    "incremental": true,
    "typeRoots": [
			"node_modules/@types",
		],
		"types": [],
    "baseUrl": ".",
    "plugins": [
      {
        "name": "typescript-eslint-language-service"
      }
    ],
	},
	"include": ["."],
  "exclude": ["node_modules"]
}
